rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for images, which are often publicly displayed.
    match /{allPaths=**} {
      allow read;
    }

    // Rules for the 'properties' folder
    match /properties/{allPaths=**} {
      // Allow file creation for any authenticated user.
      // The application should set the 'ownerId' in the file's metadata upon upload.
      allow create: if request.auth != null;

      // Allow file updates and deletions only if the user is the owner.
      // This checks the 'ownerId' in the existing file's metadata.
      allow update, delete: if request.auth != null && resource.metadata.ownerId == request.auth.uid;
    }
  }
}