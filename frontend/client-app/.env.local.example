# Firebase Emulator Configuration
# Copy this file to .env.local and update values as needed

# Enable local emulator mode
VITE_USE_EMULATOR=true

# Backend API URL (when using emulators)
VITE_API_URL=http://localhost:5001/apnaashiyanaa-app/us-central1/api

# Firebase Auth Emulator
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Firebase Storage Emulator
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Firebase Emulator Hub
VITE_FIREBASE_EMULATOR_HUB=localhost:4400

# Firestore Emulator (optional, for reference)
VITE_FIRESTORE_EMULATOR_HOST=localhost:8080

# Production Firebase Config (when not using emulators)
# VITE_USE_EMULATOR=false
# VITE_API_URL=https://us-central1-apnaashiyanaa-app.cloudfunctions.net/api
